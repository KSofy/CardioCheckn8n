<resources>
    <style name="Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardBackgroundColor">@color/card_bg</item>
    </style>

    <style name="RoundedButton">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:height">@dimen/btn_height</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>
